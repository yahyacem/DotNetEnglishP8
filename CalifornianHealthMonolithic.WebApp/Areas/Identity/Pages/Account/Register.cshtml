@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Create a new account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.UserName">Username</label>
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="username" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.FName">First name</label>
                    <input asp-for="Input.FName" class="form-control" autocomplete="first-name" aria-required="true" placeholder="John" />
                    <span asp-validation-for="Input.FName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.LName">Last name</label>
                    <input asp-for="Input.LName" class="form-control" autocomplete="last-name" aria-required="true" placeholder="Doe" />
                    <span asp-validation-for="Input.LName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Address1">Address 1</label>
                    <input asp-for="Input.Address1" class="form-control" autocomplete="address1" aria-required="true"/>
                    <span asp-validation-for="Input.Address1" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Address2">Address 2</label>
                    <input asp-for="Input.Address2" class="form-control" autocomplete="address2" aria-required="true"/>
                    <span asp-validation-for="Input.Address2" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.City">City</label>
                    <input asp-for="Input.City" class="form-control" autocomplete="city" aria-required="true"/>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Postcode">Postcode</label>
                    <input asp-for="Input.Postcode" class="form-control" autocomplete="postcode" aria-required="true"/>
                    <span asp-validation-for="Input.Postcode" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
